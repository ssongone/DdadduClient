<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:DdadduBot.ViewModels"
             x:Class="DdadduBot.ChoiceMenuPage"
             Padding="10">

    <ContentPage.BindingContext>
        <viewModels:MenuViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <ListView ItemsSource="{Binding Items}" SeparatorVisibility="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame  Padding="10" Margin="0,0,0,10" CornerRadius="5" WidthRequest="400">
                            <Grid ColumnDefinitions="*, Auto" VerticalOptions="Center">
                                <Label Text="{Binding Title}" FontSize="18" VerticalOptions="Center" Grid.Column="0"/>
                                <Button Text="{Binding Status}" VerticalOptions="Center" Grid.Column="1" Clicked="ShowDetail" />
                            </Grid>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
